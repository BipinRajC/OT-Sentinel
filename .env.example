# OT Security Dashboard Environment Configuration

# Backend API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_REFRESH_INTERVAL=5000

# Security Settings
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:3002

# Database Configuration (if using database instead of mock data)
DATABASE_URL=
DB_HOST=
DB_PORT=5432
DB_NAME=ot_security
DB_USER=
DB_PASSWORD=

# Monitoring Settings
DEVICE_SCAN_INTERVAL=10
ALERT_RETENTION_DAYS=30
MAX_ALERTS=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Docker Compose Overrides
COMPOSE_PROJECT_NAME=ot-security
RESTART_POLICY=unless-stopped
